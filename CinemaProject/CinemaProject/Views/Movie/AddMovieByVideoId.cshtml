@model CinemaProject.Models.movie

@{
    ViewBag.Title = "AddContentByVideoId";
}

<h2>Добавление контента для фильма @ViewBag.FilmName</h2>

<form action="" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => Model.video_id)
        @Html.HiddenFor(model => Model.creation_date)
        <div class="editor-label">
            @Html.LabelFor(model => model.url)
        </div>
        <div class="editor-field">
            <input id="url" title="Upload video" type="file" name="file" />
            @Html.ValidationMessageFor(model => model.url)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.quality)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.quality, new SelectList(new List<Object>
            {
                new {value = 0, text = "HD"},
                new {value = 1, text = "SD"}
            }, "value", "text", 2))
            @Html.ValidationMessageFor(model => model.quality)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    </form>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
