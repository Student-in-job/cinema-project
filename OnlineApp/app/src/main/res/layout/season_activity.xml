<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
		>

	<include layout="@layout/actionbar"/>


	<ScrollView
			android:id="@+id/main_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>

		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<LinearLayout
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<ImageView
						android:layout_margin="16dp"
						android:src="@drawable/pursuit"
						android:id="@+id/backdrop"
						android:layout_width="160dp"
						android:layout_height="180dp"
						android:scaleType="centerCrop"
						android:fitsSystemWindows="true"
						app:layout_collapseMode="parallax"/>

				<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

					<TextView
							android:layout_marginLeft="10dp"
							android:text="В погоне за счастьем"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>

					<TextView
							android:layout_marginTop="6dp"
							android:layout_marginLeft="10dp"
							android:text="Красавчик режисер"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>


					<TextView
							android:id="@+id/price"
							android:layout_marginTop="6dp"
							android:layout_marginLeft="10dp"
							android:text="2000 сум"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>

					<TextView
							android:id="@+id/buy"
							android:layout_marginTop="6dp"
							android:layout_marginLeft="10dp"
							android:textColor="@color/accent_material_light"
							android:paddingTop="10dp"
							android:paddingBottom="10dp"
							android:paddingRight="10dp"
							android:text="Купить сезон"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>


			<LinearLayout
					android:descendantFocusability="blocksDescendants"
					android:orientation="vertical"
					android:layout_marginBottom="10dp"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

				<LinearLayout
						android:orientation="vertical"
						android:layout_margin="16dp"
						android:layout_width="match_parent"
						android:layout_height="match_parent">


					<TextView
							android:id="@+id/trailer"
							android:textColor="@color/accent_material_light"
							android:paddingTop="10dp"
							android:paddingBottom="10dp"
							android:paddingRight="10dp"
							android:text="Смотреть трейлер"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>


					<com.ognev.online.app.ui.MediumTextView
							android:id="@+id/details"
							android:layout_marginTop="10dp"
							android:text="@string/video_desc"
							android:textSize="15sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>


				</LinearLayout>

				<TextView
						android:text="@string/episodes"
						android:textColor="@color/black"
						android:textSize="18sp"
						android:layout_margin="20dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

				<android.support.v7.widget.RecyclerView
						android:id="@+id/recyclerview"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

			</LinearLayout>


			<!--<android.support.design.widget.FloatingActionButton-->
			<!--android:id="@+id/watch_video"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:layout_width="wrap_content"-->
			<!--app:layout_anchor="@id/appbar"-->
			<!--app:layout_anchorGravity="bottom|right|end"-->
			<!--android:src="@drawable/play"-->
			<!--android:layout_margin="@dimen/fab_margin"-->
			<!--app:backgroundTint="@color/black"-->
			<!--android:tint="@color/white"-->
			<!--android:clickable="true"/>-->
		</LinearLayout>
	</ScrollView>
</LinearLayout>