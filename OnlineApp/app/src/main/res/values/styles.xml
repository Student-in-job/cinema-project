<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/black</item>
		<item name="colorPrimaryDark">@color/black</item>

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowBackground">@color/window_bg</item>
	</style>


	<style name="ErrorText" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/error_text_color</item>
	</style>

	<style name="ErrorText.Login">
		<item name="android:textColor">#cb2323</item>
	</style>

	<style name="LoginTextInputLayout" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16sp</item>
	</style>


	<style name="LoginEditTextTheme">
		<item name="colorControlNormal">@color/white</item>
		<item name="colorControlActivated">#f7f7f7</item>
	</style>

	<style name="BaseButton" parent="Widget.AppCompat.Button.Colored">
		<item name="colorButtonNormal">@color/color_primary</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:paddingRight">18dp</item>
		<item name="android:paddingLeft">18dp</item>
	</style>

	<style name="WhiteButton" parent="BaseButton">
		<item name="colorButtonNormal">@color/white</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:paddingRight">18dp</item>
		<item name="android:paddingLeft">18dp</item>
	</style>

	<style name="DemoButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minWidth">40dp</item>
	</style>

	<style name="TextAppearanceRegister">
		<item name="android:textColor">@color/material_login_login_color</item>
		<item name="colorControlNormal">@color/material_login_login_color</item>
		<item name="android:textColorHint">@color/material_login_login_color</item>
		<item name="colorControlActivated">@color/material_login_login_color</item>
		<item name="colorControlHighlight">@color/material_login_login_color</item>
	</style>

	<style name="TextAppearanceLogin">
		<item name="android:textColor">@color/black</item>
		<item name="colorControlNormal">@color/black</item>
		<item name="android:textColorHint">@color/black</item>
		<item name="colorControlActivated">@color/black</item>
		<item name="colorControlHighlight">@color/black</item>
	</style>

	<style name="TextAppearanceLoginError" parent="android:Widget.TextView">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="TextAppearanceRegisterError" parent="android:Widget.TextView">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">12sp</item>
	</style>
</resources>
