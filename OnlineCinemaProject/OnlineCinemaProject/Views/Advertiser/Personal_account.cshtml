@using OnlineCinemaProject.Models;
@model OnlineCinemaProject.Models.advertiser

@{
    ViewBag.Title = "Персональный кабинет рекламодателя";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<div class="page-header">
    <h2>Персональный кабинет рекламодателя</h2>
</div>

<div class="row">
    <div class="col-md-2">
        <img data-src="holder.js/200x200" class="img-thumbnail" alt="200x200" data-holder-rendered="true" style="width: 200px; height: 200px;">
    </div>
    <div class="col-md-6">

        <p><strong>Имя: </strong>@Model.name</p>
        <p><strong>Е-маил: </strong>@Model.email</p>
        <p><strong>телефон: </strong>@Model.phone_number</p>
               
            
    </div>
</div>
@{
    List<banner> banner = ViewBag.banners;
}

    <div class="col-md-6">
        <h4 class="sub-header">Баннеры</h4>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Имя</th>
                    <th>Начало</th>
                    <th>Конец</th>
                    <th>Цена</th>
                    <th>Изображение</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var banners in Model.banners)
                {
                    <tr>
                        <td>@banners.id</td>
                        <td>@banners.name</td>
                        <td>@banners.start</td>
                        <td>@banners.end</td>
                        <td>@banners.payment</td>
                        <td>
                            <center>
                                <img src="~/uploads/@banners.img_url" class="video-img-list" style="" width="52" height="70" />
                            </center>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>


    <div class="col-md-6">
        <h4 class="sub-header"> Тизеры </h4>
       
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Имя</th>
                    <th>Начало</th>
                    <th>Конец</th>
                    <th>Цена</th>
                    <th>Изображение</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teasers in Model.teasers)
                {
                    <tr>
                        <td>@teasers.id</td>
                        <td>@teasers.name</td>
                        <td>@teasers.start</td>
                        <td>@teasers.end</td>
                        <td>@teasers.payment</td>
                        <td>
                            <center>
                                <img src="~/uploads/@teasers.img_url" class="video-img-list" style="" width="52" height="70" />
                            </center>
                        </td>


                    </tr>
                }
            </tbody>
        </table>

    </div>


   

