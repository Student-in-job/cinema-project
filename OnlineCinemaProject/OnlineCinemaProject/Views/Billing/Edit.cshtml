@model OnlineCinemaProject.Models.ViewModels.TariffViewModel

@{
    Layout = "../Shared/_Dashboard.cshtml";
    ViewBag.Title = "Редактирование";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header" data-original-title="">
                <h2><i class="fa fa-edit"></i><span class="break"></span>Редактирование тарифа</h2>
            </div>
            <div class="box-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form">
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Active)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.EditorFor(model => model.Description)
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Price, new { @class = "control-label " })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.EditorFor(model => model.Price)
                                    @Html.ValidationMessageFor(model => model.Price)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AdverticementEnabled, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.EditorFor(model => model.AdverticementEnabled)
                                    @Html.ValidationMessageFor(model => model.AdverticementEnabled)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NewFilmsEnabled, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.EditorFor(model => model.NewFilmsEnabled)
                                    @Html.ValidationMessageFor(model => model.NewFilmsEnabled)
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div><!--/col-->

</div><!--/row-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}