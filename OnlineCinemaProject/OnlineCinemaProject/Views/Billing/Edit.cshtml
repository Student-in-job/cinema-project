@using OnlineCinemaProject.Models.ViewModels
@model OnlineCinemaProject.Models.tariff

@{
    Layout = "../Shared/_Dashboard.cshtml";
    ViewBag.Title = "Редактирование";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header" data-original-title="">
                <h2><i class="fa fa-edit"></i><span class="break"></span>Редактирование тарифа</h2>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("Edit","Billing", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.id)
                    @Html.HiddenFor(model => model.active)
                    @Html.HiddenFor(model => model.creation_date)
                    @Html.AntiForgeryToken()
                     <div class="form">

                        <div class="form-group">
                            @Html.LabelFor(model => model.name, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.name)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.description, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.TextAreaFor(model => model.description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.description)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.price, new { @class = "control-label " })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.TextBoxFor(model => model.price, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.price)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.adverticement_enabled, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.TextBoxFor(model => model.adverticement_enabled, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.adverticement_enabled)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.new_films_enabled, new { @class = "control-label" })
                            <div class="colntrol">
                                <div class="input-group col-sm-4">
                                    @Html.TextBoxFor(model => model.new_films_enabled, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.new_films_enabled)
                                </div>
                            </div>
                        </div></div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    
                }
            </div>
        </div>
    </div><!--/col-->

</div><!--/row-->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}