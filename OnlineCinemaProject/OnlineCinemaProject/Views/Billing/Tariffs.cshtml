@model IEnumerable<OnlineCinemaProject.Models.tariff>
@{
    ViewBag.Title = "Тарифы";
    Layout = "../Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header" data-original-title="">
                <h2><i class="fa fa-usd"></i><span class="break"></span>Тарифы</h2>
                <div class="box-icon">
                    <a href="@Url.Action("Create")" @*class="btn-add"*@><i class="fa fa-plus"></i></a>
                    <a href="#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    @*<a href="http://bootstrapmaster.com/live/simpliq2/table.html#" class="btn-close"><i class="fa fa-times"></i></a>*@
                </div>
            </div>
            <div class="box-content">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
                
                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                        <thead>
                        <tr role="row">
                            <th
                                class="sorting_asc"
                                role="columnheader"
                                tabindex="0"
                                aria-controls="DataTables_Table_0"
                                rowspan="1"
                                colspan="1"
                                aria-sort="ascending"
                                aria-label="Username: activate to sort column descending"
                                style="width: 293px;">Название</th>
                            <th
                                class="sorting"
                                role="columnheader"
                                tabindex="0"
                                aria-controls="DataTables_Table_0"
                                rowspan="1"
                                colspan="1"
                                aria-label="Date registered: activate to sort column ascending"
                                style="width: 208px;">Дата создания</th>
                            <th
                                class="sorting"
                                role="columnheader"
                                tabindex="0"
                                aria-controls="DataTables_Table_0"
                                rowspan="1"
                                colspan="1"
                                aria-label="Role: activate to sort column ascending"
                                style="width: 120px;">Цена</th>
                            <th
                                class="sorting"
                                role="columnheader"
                                tabindex="0"
                                aria-controls="DataTables_Table_0"
                                rowspan="1"
                                colspan="1"
                                aria-label="Status: activate to sort column ascending"
                                style="width: 125px;">Статус</th>
                            <th class="sorting"
                                role="columnheader"
                                tabindex="0"
                                aria-controls="DataTables_Table_0"
                                rowspan="1"
                                colspan="1"
                                aria-label="Status: activate to sort column ascending"
                                style="width: 125px;">Подписчики</th>
                            <th
                                class="sorting"
                                role="columnheader"
                                tabindex="0"
                                aria-controls="DataTables_Table_0"
                                rowspan="1"
                                colspan="1"
                                aria-label="Actions: activate to sort column ascending" 
                                style="width: 237px;">Действия</th>
                        </tr>
                        </thead>

                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                    @foreach (var item in Model)
                    {
                        var count = item.subscriptions.Count;
                        
                        <tr class="odd">
                            <td class=" sorting_1">@item.name</td>
                            <td class="center ">@item.creation_date</td>
                            <td class="center ">@count сум</td>
                            <td class="center ">
                                @if ((bool) item.active)
                                {
                                    <span class="label label-success">Active</span>
                                }
                                else
                                {
                                    <span class="label label-default">Inactive</span>
                                }
                            </td>
                            <td class="center ">@item. сум</td>
                            <td class="center ">
                                <a class="btn btn-success" href="@Url.Action("Details", new {item.id})">
                                    <i class="fa fa-search-plus "></i>
                                </a>
                                <a class="btn btn-info" href="@Url.Action("Edit", new {item.id})">
                                    <i class="fa fa-edit "></i>
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new {item.id})">
                                    <i class="fa fa-trash-o "></i>
                                </a>
                            </td>
                        </tr>
                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!--/col-->

</div><!--/row-->

<div class="row">
    <div class="col-md-6 ">
        @( (DotNet.Highcharts.Highcharts)ViewBag.Subscribers)
    </div>
    <div class="col-md-6 ">
        @( (DotNet.Highcharts.Highcharts)ViewBag.Subscribers)
    </div>
</div>


<div class="modal fade" id="addTariff">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <p>Add new tariff</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

