        <script>
            function userSubmit(url) {
                $('video')[0].player.setSrc(url);   
                $('video')[0].player.play();
            }
        </script>
        <script>
            $('video').mediaelementplayer({
                success: function(media, node) {
                    $('#' + node.id + '-mode').html('mode: ' + media.pluginType);
                }
            });
        </script>

        
