<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/highcharts")
    <link href="~/content/bootstrap-3.3.6/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome-4.5.0/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
<!--
<script src="~/scripts/jquery-2.2.3.min.js"></script>
<script src="~/scripts/mediaelement-and-player.min.js"></script>
<link rel="stylesheet" href="~/Content/player.css"/>
    -->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Онлайн Кинотеатр", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <form class="navbar-form navbar-left">
                    <input type="text" class="form-control" placeholder="Search...">
                </form>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Домашняя", "Index", "Home")</li>
                    <li>@Html.ActionLink("О разработчиках", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                </ul>
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container-fluid">
    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-9">
            @RenderBody()
        </div>
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
            <div class="list-group">
                <a href="#" class="list-group-item active">Link</a>
                @*<a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>*@
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Роли", "Index", "Roles",null ,new {@class="list-group-item"})
                    @Html.ActionLink("Пользователи", "Index", "User", null, new { @class = "list-group-item" })
                    @Html.ActionLink("System Monitor", "Index", "Cpu", null, new { @class = "list-group-item" })
                     @Html.ActionLink("Резервное копирование", "Index", "Backup", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Восстановление", "Index", "Restore", null, new { @class = "list-group-item" })
                }
                @if (User.IsInRole("ContentManager"))
                {
                    @Html.ActionLink("Видео", "Index", "Video", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Жанры", "Index", "Genre", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Актеры", "Index", "Actor", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Страны", "Index", "Country", null, new { @class = "list-group-item" })
                }
                @if (User.IsInRole("PRManager"))
                {
                    @Html.ActionLink("Рекламодатель", "Index", "Advertiser", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Баннеры", "Index", "Banner", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Тизеры", "Index", "Teaser", null, new { @class = "list-group-item" })
                     @Html.ActionLink("Ротатор баннеров", "Rotator", "Banner", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Ротатор тизеров", "Rotator", "Teaser", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Статистика баннеров", "Index", "StatisticsBanner", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Статистика тизеров", "Index", "StatisticsTeaser", null, new { @class = "list-group-item" })
                }
                @if (User.IsInRole("BilingManager"))
                {
                    @Html.ActionLink("Новый рабочий стол", "Index", "Dashboard", null, new { @class = "list-group-item" })
                }

            </div>
        </div>
    </div>
       
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
