@model PagedList.IPagedList<OnlineCinemaProject.Models.teaser>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Teaser";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<h2>     </h2>



@using (Html.BeginForm("Index", "Teaser", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="panel panel-info">
 
    <div class="panel-heading"><h2><center>Тизеры</center></h2></div>

    <table class="table table-striped table-bordered ">

        
            <tr>

                <th>
                    @Html.ActionLink("Имя тизера", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>
                    @Html.ActionLink("Начало", "Index", new { sortOrder = ViewBag.startSortParm })
                </th>
                @*<th>
                    Конец
                </th>*@
                @*<th>
                    @Html.ActionLink("Цена", "Index", new { sortOrder = ViewBag.paymentSortParm })
                </th>*@

                <th>
                    Имя рекламодателя
                </th>
                <th>
                    Изображение
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.start)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.end)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.payment)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.advertiser.name)
                    </td>

                    <td>
                        <div style="text-align: center;" >
                            <img src="~/uploads/@item.img_url" class="video-img-list" style="" width="75" height="100" />
                        </div>
                    </td>
                    <td> <center>
                        <a href="@Url.Action("Edit", new {id = item.id})" class="btn btn-primary">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a href="@Url.Action("Details", new {id = item.id})" class="btn btn-primary">
                            <i class="glyphicon glyphicon-list-alt"></i>
                        </a>

                        <a href="@Url.Action("Delete", new {id = item.id})" class="btn btn-primary">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a></center>
                    </td>

                </tr>
            }

        </table>
    </div>
        <br />
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        

        
