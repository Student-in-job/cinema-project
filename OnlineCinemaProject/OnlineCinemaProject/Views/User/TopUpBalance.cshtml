@model OnlineCinemaProject.Models.TopUpViewModel
@{
    Layout = "~/Views/Shared/Dashboard.cshtml";
    ViewBag.Title = "title";
    
}

<div class="row">
    <div class="col-md-8">
        <section id="TopUpForm">
            @using (Html.BeginForm("TopUpBalance", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.UserId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Amount)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ок" class="btn btn-default" />
                    </div>
                </div>
                
            }
        </section>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
